<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp"
    android:padding="5dp"
    android:id="@+id/card_view">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="327dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:padding="2dp"
            android:text="School Name"
            android:textSize="28dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="80dp">

        <ImageView
        android:id="@+id/location_icon"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_location_foreground"
        android:layout_gravity="end" />
        <TextView
            android:id="@+id/tv_school_location"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start"
            android:lines="1"
            android:textSize="20dp"
            tools:text="School Location"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="130dp">
        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_phone_foreground"
            android:layout_gravity="end" />
        <TextView
            android:id="@+id/tv_school_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:gravity="start"
            android:lines="1"
            android:textSize="20dp"
            tools:text="School phone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/next_button"
        android:layout_width="60dp"
        android:layout_height="180dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_next_foreground" />
</androidx.cardview.widget.CardView>